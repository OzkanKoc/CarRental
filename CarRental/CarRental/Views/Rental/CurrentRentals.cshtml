@model List<CarRental.Models.Entity.Rental>
@{
    ViewBag.Title = "CurrentRentals";
}


<div class=" align-items-center pt-3 pb-2 mb-3 border-bottom">
    <div class="d-flex flex-wrap p-3 justify-content-center">
        <h1 class="h2">Mevcut Kiralama Listesi</h1>
    </div>

    <div class="table-responsive">
        <table class="table table-dark table-striped table-sm">
            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Soyisim</th>
                    <th>Müşteri Kimlik No</th>
                    <th>Model</th>
                    <th>Plaka</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Customer.FirstName</td>
                        <td>@item.Customer.LastName</td>
                        <td>@item.Customer.IdentityNumber</td>
                        <td>@item.Car.Model.Name</td>
                        <td>@item.Car.PlateNumber</td>
                        <td>
                            <a href="@Url.Action("Edit",new { id=item.RentalId})"><i class="fas fa-edit"></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", new { id=item.RentalId})"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

